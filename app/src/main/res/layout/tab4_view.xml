<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/operations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ScreenStye"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal">

            <!-- Layout principal-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Primera hilera de numeros-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/number_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/number_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/number_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />
                </LinearLayout>

                <!-- Segunda hilera de numeros-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/number_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/number_five"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/number_six"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />
                </LinearLayout>

                <!-- Tercera hilera de numeros-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/number_seven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/number_eight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/number_nine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9"
                        style="@style/NumberStyles"
                        android:layout_weight="1" />
                </LinearLayout>

                <!-- Numero cero-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/number_zero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        style="@style/NumberStyles"
                        android:layout_weight="3" />
                </LinearLayout>
            </LinearLayout>

            <!-- Numero de operaciones-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <Button
                    android:id="@+id/add_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+"
                    style="@style/NumberStyles"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/equals_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="="
                    style="@style/NumberStyles"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/clear_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C"
                    style="@style/NumberStyles"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>