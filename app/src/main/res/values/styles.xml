<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScreenStye" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/darkScreencolor</item>
        <item name="android:maxLength">10</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="NumberStyles">
        <!-- Customize your themTittleStylese here. -->
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/darkScreencolor</item>
        <item name="android:padding">4sp</item>
    </style>

    <style name="ButtonStyles">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darkScreencolor</item>
        <item name="android:layout_margin">4sp</item>
    </style>

    <style name="TittleStyles">
        <!-- Customize your theme here. -->
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
